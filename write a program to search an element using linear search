#include <stdio.h>
void read1(int a[], int n)
{
	int i;
	printf("Enter %d elements : ", n);
	for(int i= 0; i<n; i++){
		scanf("%d", &a[i]);
			
	}
}
int linearSearch(int arr[], int index, int size, int target) {
	if (index >= size) return -1;
	if (arr[index] == target) return index;
	return linearSearch(arr, index + 1, size, target);
}
