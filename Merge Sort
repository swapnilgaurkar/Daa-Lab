#include <stdio.h>
	int n1 = mid-left+1;
	int n2 = right-mid;

	int L[n1], R[n2];
	for (int i = 0; i<n1; i++)
		L[i] = arr[left+i];
	for(int j = 0; j<n2; j++)
		R[j] = arr[mid + 1 + j];

	int i = 0, j=0, k=left;
	while(i<n1 && j<n2){
		if(L[i] <= R[j]){
			arr[k++] = L[i++];
		} else {
			arr[k++] = R[j++];
		}
	}
	while(i<n1)
		arr[k++] = L[i++];
	while(j<n2)
		arr[k++] = R[j++];

	printf("Pass: ");
	//for (int x = left; x <= right; x++)
		//printf("%d ", arr[x]);
	//printf("\n");
	printArray (arr, left, right);
}

void mergeSort(int arr[], int l, int r){
	if(l<r){
		int m = l+(r-l)/ 2;

		mergeSort(arr, l, m);
		mergeSort(arr, m+1, r);

		merge(arr, l, m, r);
	}
}

int main(){
	int n;
	printf("no of elements: ");
	scanf("%d", &n);

	int arr[n];
	printf("elements: ");
	for (int i = 0; i<n; i++){
		scanf("%d ", &arr[i]);
	}

	printf("Given array:\n");
	printArray (arr, 0, n-1);
	//for (int i = 0; i<n; i++)
		//printf("%d ", arr[i]);
		//printf("\n");
			
	mergeSort(arr, 0, n-1);
	printf("Sorted array:\n");
	printArray (arr, 0, n-1);
	//for (int i = 0; i<n; i++)
		//printf("%d ", arr[i]);
	//printf("\n");
	return 0;
}
